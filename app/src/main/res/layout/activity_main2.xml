<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yun.togethertogether.Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"> //이미지 등록 레이아웃



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"> // 대화창 레이아웃


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"> // 3:3,4:4,방만들기 버튼 속성 레이아웃


        <Button
            android:id="@+id/three"
            android:layout_weight="1"
            android:text="3:3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/four"
            android:text="4:4"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:text="방만들기"
            android:layout_weight="1"
            android:id="@+id/make_Room"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


    </LinearLayout>

</LinearLayout>
