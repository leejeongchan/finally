<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/power"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:text="ID : "
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ID1"
        android:layout_alignBottom="@+id/power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ID2" />

    <TextView
        android:id="@+id/ID3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton3"
        android:text="0" />

    <TextView
        android:id="@+id/ID2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2"
        android:text="0" />

    <TextView
        android:id="@+id/Day1"
        android:layout_below="@+id/ID1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/Chat1"
        android:padding="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Day1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_alignParentRight="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/baseline_more_vert_black_18dp"
        />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/Chat1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/baseline_favorite_border_black_18dp"

        />
    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Chat1"
        android:layout_marginStart="50dp"
        android:background="@drawable/baseline_calendar_today_black_18dp"
        />


</RelativeLayout>